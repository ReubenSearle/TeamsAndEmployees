@model TeamsAndEmployees.Models.EmployeeViewModel

@{
    ViewBag.Title = "Edit Employee";
    ViewBag.Description = "Modify the employee details and hit the save button!";
}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>

        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <div class="editor-label">
                @Html.LabelFor(model => model.FirstName)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.FirstName)
                @Html.ValidationMessageFor(model => model.FirstName)
            </div>
        </div>
        <div class="form-group">
            <div class="editor-label">
                @Html.LabelFor(model => model.LastName)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.LastName)
                @Html.ValidationMessageFor(model => model.LastName)
            </div>
        </div>
        <div class="form-group">
            <div class="editor-label">
                @Html.LabelFor(model => model.DateOfBirth)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.DateOfBirth, new { @class = "date" })
                @Html.ValidationMessageFor(model => model.DateOfBirth)
            </div>
        </div>
        <div class="form-group">
            <div class="editor-label">
                @Html.LabelFor(model => model.TeamId, "Team")
            </div>
            <div class="editor-field">
                @Html.DropDownList("TeamId", String.Empty)
                @Html.ValidationMessageFor(model => model.TeamId)
            </div>
        </div>
            @Html.HiddenFor(model => model.OriginalTeamId)

            <p>
                <input type="submit" value="Save" class="btn btn-default" />
            </p>
    </fieldset>
}

<div>
    <a href="@Url.Action("")">
        <i class="glyphicon glyphicon-arrow-left"></i>
        Back to List
    </a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/custom")
}